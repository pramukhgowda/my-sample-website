
pipeline {
    agent {label "slave2"}
    stages {
        stage ("clone") {
            steps {
                sh "pwd"
                sh "ls"
                 git url: 'https://github.com/samsambrama/my-sample-website.git'
                
                
            }
        }
    stage ("build") {
        steps {
            sh "pwd"
            sh "mvn clean install"
        }
    } 

    stage ("deploy") {
    steps {
        sh "cp my-sample-website/webapp/target/webapp.war /home/ec2-user/apache-tomcat-8.0.15/webapps"
    }
    }
    }
}
